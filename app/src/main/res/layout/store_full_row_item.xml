<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/item_image"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/local"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/larco"
        android:textAppearance="@style/subtitle_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_image" />

    <TextView
        android:id="@+id/item_noUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/capacidad"
        android:textAppearance="@style/greeting_text"
        android:textColor="@color/black_design"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

    <TextView
        android:id="@+id/item_direccion"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/jr_larco_333"
        app:layout_constraintEnd_toEndOf="@+id/item_capacidad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_noUsed"
        app:layout_constraintTop_toBottomOf="@+id/item_noUsed" />

    <TextView
        android:id="@+id/item_capacidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/proximanovabold"
        android:text="@string/_40"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_noUsed"
        app:layout_constraintStart_toEndOf="@+id/item_noUsed"
        app:layout_constraintTop_toTopOf="@+id/item_noUsed" />
</androidx.constraintlayout.widget.ConstraintLayout>