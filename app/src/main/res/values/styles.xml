<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titulo_bold">
        <item name="android:fontFamily">@font/proximanovabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="subtitle_bold">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/proximanovabold</item>
        <item name="android:textColor">@color/black_design</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="subtitle_icon">
        <item name="android:fontFamily">@font/proximanovabold</item>
        <item name="android:textColor">@color/gray_design</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="section_title">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/proximanovabold</item>
        <item name="android:textColor">@color/black_design</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="greeting_text">
        <item name="android:fontFamily">@font/proximanovaregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <!-- tema para desaparecer el actionbar -->
    <style name="Theme.Restaurant.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="see_more">
        <item name="android:fontFamily">@font/proximanovabold</item>
        <item name="android:textColor">@color/red_design</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="intro_subtitle">
        <item name="android:fontFamily">@font/proximanovaregular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="plato_cart">
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_height">133dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/fondo_plato</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="cuenta_cart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">78dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/black_design</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="raya_cart">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">#B2A19797</item>
        <item name="android:backgroundTint">#45978E8E</item>
    </style>
</resources>