<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isil.restaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restaurant">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity android:name=".StoresActivity"></activity>
        <activity android:name=".RecommendationActivity" />
        <activity android:name=".NosotrosActivity" />
        <activity android:name=".RecoverPasswordActivity" />
        <activity android:name=".SignUpActivity" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Restaurant.NoActionBar" />
        <activity android:name=".ShoppingCart" />
        <activity android:name=".HamburguerActivity" />
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Restaurant.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ServiciosActivity" />
        <activity
            android:name=".IntroPageActivity"
            android:theme="@style/Theme.Restaurant.NoActionBar" />
    </application>

</manifest>